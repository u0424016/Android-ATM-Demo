<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edward_liao.atm">

    <application
        android:name=".GlobalVariable"
        android:allowBackup="true"
        android:icon="@mipmap/atm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/atm"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FunctionActivity" />
        <activity android:name=".Balance" />
        <activity android:name=".Deposit" />
        <activity android:name=".Withdraw" />
        <activity android:name=".Transfer" />
        <activity android:name=".Pay" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ForgotPasswordActivity"></activity>
    </application>

</manifest>







